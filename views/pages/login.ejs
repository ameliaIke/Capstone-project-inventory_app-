		<body class="reg">
<!-- NAVBAR -->
			<nav class="navbar navbar-expand-lg navbar-light bg-light">
				<div class="container-fluid">
					<a class="navbar-brand" href="/">
						<img src="../images/logo-green.png" alt="purchase logo here" width="150" height="">
					</a>
					<button class="navbar-toggler btn-outline-success" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon btn-outline-success"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
						<div class="navbar-nav">
							<a class="nav-link active" aria-current="page" href="/">Home</a>
						</div>
					</div>

				</div>
			</nav>
<!-- FORM -->
			<div class="container-fluid form login-form">
				<h4 class="text-center">Login and join our community</h4>
				<form action="/login" method="POST">
					<div class="row g-3">
						 <div class="col-md-12">
							<input type="email" class="form-control" placeholder="Enter your registerd email" name="Email" required>
						</div>
						
						<div class="col-md-12">
							<input type="password" class="form-control" placeholder="Enter your registered password" name="Password" required>
						</div>
						<div class="col-md-12 mt-2">
							<button type="submit" class="btn btn-sm btn-primary">Login</button>
						</div>
						<p class="text-center"> If you don't have an account please <a href="/register">register</a></p>
					</div>

				</form>
			</div>

			








